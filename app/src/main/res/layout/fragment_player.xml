<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_player_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".PlayerFragment">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:src="@drawable/backplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_player_backplayer"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/background_player"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:src="@drawable/ring"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:id="@+id/fragment_player_ring_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"
                android:layout_marginBottom="239dp"/>

        <ImageView
                android:src="@drawable/ring"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:id="@+id/fragment_player_ring_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="238dp"
                android:layout_marginStart="238dp"
                android:layout_marginBottom="239dp"/>
        <ImageView
                android:src="@drawable/uppercase"
                android:id="@+id/fragment_player_uppercase"
                android:layout_width="285dp"
                android:layout_height="164dp"
                android:layout_marginLeft="61dp"
                android:layout_marginStart="61dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="183dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>